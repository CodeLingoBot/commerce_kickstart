/**
 * Implements hook_block_view().
 *
 * This hook generates the contents of the blocks themselves.
 */
function commerce_kickstart_help_block_view($delta = '') {
  $block = array();
  switch ($delta) {
    case 'commerce_kickstart_ressources':
      $block['subject'] = t('Additional Site Builder Resources');
      $block['content'] = commerce_kickstart_help_contents($delta);
      break;
    case 'commerce_kickstart_community':
      $block['subject'] = t('Connect with the Community');
      $block['content'] = commerce_kickstart_help_contents($delta);
      break;
  }
  return $block;
}

/**
 * A module-defined block content function.
 */
function commerce_kickstart_help_contents($which_block) {
  switch ($which_block) {
    case 'commerce_kickstart_ressources':
      $links = array(
        l(t('Drupal Commerce Site Builder Guide'), 'http://www.drupalcommerce.org/user-guide'),
        l(t('Commerce Kickstart User Guide (Link TBD)'), ''),
        l(t('Commerce Guys Videos'), 'https://vimeo.com/channels/commerceguys'),
        l(t('Learn Views'), 'http://nodeone.se/en/taming-the-beast-learn-views-with-nodeone'),
        l(t('Learn Rules'), 'http://nodeone.se/node/32'),
        l(t('Books about Drupal'), 'http://drupal.org/books'),
      );
      break;

    case 'commerce_kickstart_community':
      $links = array(
        t('IRC, freenode.net: #drupal-commerce (<a href="@url">Setting up and using IRC</a>)', array('@url' => 'http://drupal.org/irc/setting-up')),
        l(t('DrupalCommerce.org'), 'http://drupalcommerce.org'),
        l(t('drupal.org'), 'http://drupal.org'),
        l(t('Drupal Commerce Discussions'), 'http://www.drupalcommerce.org/discussions'),
        l(t('Drupal Commerce Q&A'), 'http://www.drupalcommerce.org/questions'),
      );
      break;
  }
  return array('#markup' => implode('<br />', $links) . '<br />');
}

